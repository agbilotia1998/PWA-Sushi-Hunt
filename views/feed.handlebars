<script type="text/javascript" async>

function urlParam(){
    var hashes = window.location.href.slice(window.location.href.indexOf('=') + 1).split('&');
    return hashes;
}

var budget = urlParam();

$.get('/results', {budget:budget}, function(data){
  $('#loader').hide();
  $('#results').append(data);
});


</script>
